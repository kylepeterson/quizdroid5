<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="quizdroid.kylep9.washington.edu.quizdroid.MathIntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".333333">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Math"
            android:textSize="40dp"
            android:gravity="center|center_vertical"
            android:background="#6699CC"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".333333"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mathematics is the science that deals with the logic of shape, quantity and arrangement."
            android:textSize="20dp"
            android:gravity="center|center_vertical"
            android:textColor="#000044" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".333333">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Begin"
            android:id="@+id/mathbegin"
            android:textSize="40dp"
            android:background="#003366"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</LinearLayout>
